generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["nativeDistinct", "relationJoins"]
  engineType      = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id() @unique @default(uuid())
  email     String   @unique
  name      String?
  password  String
  avatar    String?  @db.Text
  createdAt DateTime @default(now())
}
